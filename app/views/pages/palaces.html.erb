<%= render 'shared/navbar' %>


<div class="container mt-5">

<div class="onglets d-flex justify-content-md-center">
  <%= link_to "Voir", dashboard_palaces_path%> |
  <%= link_to "Gérer mes réservations", dashboard_bookings_as_owner_path %>
</div>

  <div class="row justify-content-evenly g-3">
    <% @palaces.each do |palace| %>
      <div class="card" style="width: 18rem;">
        <img src="https://cdn.lecollectionist.com/__lecollectionist__/production/houses/7336/photos/Yz13vnLwSjG3i5F4VdpC_0c03f529-5d68-40c4-b964-c19b8d16c019.jpg?width=2880&q=65" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= palace.name %></h5>
          <p class="card-text"><%= palace.description %></p>
          <p class="card-text"><%= palace.address %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
