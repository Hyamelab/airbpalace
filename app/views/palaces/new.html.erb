<div class="container mt-5">
  <div class= "row">
    <ul class="nav nav-tabs" >
      <div class= "col-4">
        <li class="nav-item flex-fill">
          <%= link_to dashboard_palaces_path, class: "nav-link w-100" do %>
              <div aria-current="page">SEE MY PALACES</div>
          <% end %>
        </li>
        </div>
        <div class = "col-4">
        <li class="nav-item flex-fill">
          <%= link_to dashboard_bookings_as_owner_path, class: "nav-link w-100" do %>
              <div aria-current="page", >MANAGE THE BOOKING</div>
          <% end %>
          </li>
          </div>
          <div class= "col-4">
        <li class="nav-item flex-fill">
          <%= link_to new_palace_path, class: "nav-link active w-100" do %>
          <div aria-current="page", >ADD A PALACE</div>
        <% end %>
        </li>
      </div>
    </ul>
  </div>
</div>

<div class="container mt-5 d-flex justify-content-center">
  <div class = "card border-0 rounded shadow-lg p-4" style="max-width: 700px; width: 100%;">
    <%= simple_form_for(@palace) do |f| %>
    <div class="form-group mb-3">
      <%= f.input :name, label: "Name" %>
    </div>

    <div class="form-group mb-3">
      <%= f.input :description, label: "Description" %>
    </div>

    <div class="form-group mb-3">
      <%= f.input :address, label: "Address" %>
    </div>

    <div class="form-group mb-3">
      <%= f.input :price, label: "Your Price" %>
    </div>
    
    <div class="form-group mb-3">
      <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Your Photos" %>
    </div>


      <%= f.submit "Submit", class: "button-card" %>
    </div>

    <% end %>
  </div>
</div>
