<div class="container mt-5 d-flex justify-content-center">
  <div class = "card border-0 rounded shadow-lg p-4" style="max-width: 700px; width: 100%;">
  <h1 class="text-center">Update your palace</h1>
  <%= simple_form_for [@palace] do |f| %>
   <%= f.input :name, label: "Name" %>
   <%= f.input :description, label: "Description" %>
   <%= f.input :address, label: "Address" %>
   <%= f.input :price, label: "Your Price" %>
   <%= f.input :photos, as: :file, input_html: { multiple: true } %>
   <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  <div><%= link_to "Back", palace_path(@palace), class: "btn btn-ghost"%></div>
</div>
