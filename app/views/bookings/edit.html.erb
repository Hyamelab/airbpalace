<div class="container-fluid">

  <div class="bg-image" style="background-image: url('https://cdn.lecollectionist.com/__lecollectionist__/production/houses/7336/photos/Yz13vnLwSjG3i5F4VdpC_0c03f529-5d68-40c4-b964-c19b8d16c019.jpg?width=2880&q=65'); height: 300px; background-position: center; background-size: cover;">
    <div class="d-flex justify-content-center align-items-center h-100" style="background: rgba(0, 0, 0, 0.5);">
       <h2 style="color:hsl(0, 0.00%, 100.00%); font-family: 'Arial', sans-serif; font-size: 26px; text-align: center; text-transform: uppercase; letter-spacing: 2px; padding-bottom: 10px;">
    Update your booking
    </h2>
    </div>
  </div>


<div class="container mt-5 d-flex justify-content-center">
  <div class = "card border-0 rounded shadow-lg p-4" style="max-width: 700px; width: 100%;">
    <%= simple_form_for [@palace, @booking], html: { data: { controller: 'flatpickr' } } do |f| %>
      <div class="form-group mb-3">
        <%= f.input :begin_date, as: :string, input_html: { data: { flatpickr_target: 'startDateInput' }, class: 'form-control' }, label: "Start Date", label_html: { class: "font-weight-semibold" } %>
      </div>
      <div class="form-group mb-3">
        <%= f.input :end_date, as: :string, input_html: { data: { flatpickr_target: 'endDateInput' }, class: 'form-control' }, label: "End Date", label_html: { class: "font-weight-semibold" } %>
      </div>

      <div class="d-flex justify-content-between">
        <%= f.submit "Update the booking request", class: "button-card" %>
      </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
