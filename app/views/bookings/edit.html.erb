<div class="container">
    <div class="col">
      <p class="text-center"><strong>Update your booking</strong></p>
      <%= simple_form_for [@palace, @booking],
        html: {data: { controller: 'flatpickr' } } do |f| %>
         <!-- Date de dÃ©but -->
        <%= f.input :begin_date, as: :string, input_html: { data: { flatpickr_target: 'startDateInput', } } %>
            <!-- Date de fin -->
        <%= f.input :end_date, as: :string, input_html: { data: { flatpickr_target: 'endDateInput' } } %>

        <!-- Bouton pour soumettre -->
        <%= f.submit "Update the booking request!", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Back to booking details", booking_path(@booking), class: "btn btn-secondary" %>
    </div>
